extends ../layouts/common.pug
block content
  h1 Create user

  if(errors)
    each error in errors
      .alert.alert-danger= error

  form(action = "/users/create",method = "POST")
    .form-group
      label(for="name") Name : 
      input#name.form-control.mb-3(type="text", name = "name", value = values ? values.name : '')

      label(for="phone") Phone : 
      input#name.form-control.mb-3(type="text", name = "phone",value = values ? values.phone : '')

      Button.btn.btn-primary Create