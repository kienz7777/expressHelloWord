extends ../layouts/common.pug
block content
  h1 Create user

  if(errors)
    each error in errors
      .alert.alert-danger= error

  form(action = "/users/create",method = "POST", enctype= "multipart/form-data")
    .form-group
      label(for="name") Name : 
      input#name.form-control.mb-3(type="text", name = "name", value = values ? values.name : '')

      label(for="phone") Phone : 
      input#phone.form-control.mb-3(type="text", name = "phone",value = values ? values.phone : '')

      label(for="avatar") Avatar : 
      input#avatar.form-control-file.mb-3(type="file", name = "avatar")

      Button.btn.btn-primary Create