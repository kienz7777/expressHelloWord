extends ../layouts/common.pug
block content
   h1 Users

   .d-flex.align-items-center.mb-3
      a.btn.btn-primary(href="/users/create") New

      form.ml-auto(action = "/users/search" ,method ="GET", class = "d-flex")
         input(type = "text",name = "q", class = "form-control")
         Button(class= "btn btn-primary ml-2") Search

   table.table
      tr 
         th Avatar
         th Name
         th Phone
         th Actions

      each user in users
         tr
            td.avatar(style="padding-top: 0px")
               img(src= user.avatar,style="width : 64px" )
            td= user.name
            td= user.phone
            td 
               a.btn.btn-info(href='/users/' + user.id) View