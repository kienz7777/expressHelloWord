extends ../layouts/common.pug
block content
  h1 Login

  if(errors)
    each error in errors
      .alert.alert-danger= error

  form(method = "POST")
    .form-group
      label(for="email") Email : 
      input#email.form-control.mb-3(type="text", name = "email", value = values ? values.email : '')

      label(for="password") password : 
      input#password.form-control.mb-3(type="password", name = "password",value = values ? values.password : '')

      Button.btn.btn-primary Login